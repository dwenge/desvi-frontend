{
    "compilerOptions": {
        "baseUrl": "./",
        "module": "ESNext",
        "moduleResolution": "Bundler",
        "target": "ES2020",
        "allowImportingTsExtensions": true,
        "strictNullChecks": true,
        "strictFunctionTypes": true,
        "paths": {
            "@/*": ["src/*"]
        },
    },
    "exclude": [
        "node_modules",
        "**/node_modules/*"
    ]
}